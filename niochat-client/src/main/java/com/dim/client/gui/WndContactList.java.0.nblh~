    //构造联系人列表
    private void buildTree() {

        //从服务器获取联系人列表
        //List<Contact> contacts = ContactManager.getContacts();
        //TODO

        DefaultMutableTreeNode top = new DefaultMutableTreeNode("联系人");

        jtrContacts = new javax.swing.JTree(top);

        jtrContacts.addMouseListener(new java.awt.event.MouseAdapter() {

            @Override
            public void mousePressed(java.awt.event.MouseEvent evt) {
                jtrContactsMousePressed(evt);
            }
        });

        DefaultTreeCellRenderer renderer = new DefaultTreeCellRenderer();

        URL nodeURL = getClass().getResource("/images/folder.gif");
        ImageIcon icon = new ImageIcon(nodeURL);

        URL leafURL = getClass().getResource("/images/leaf.gif");
        ImageIcon leafIcon = new ImageIcon(leafURL);

        if (icon != null) {
            renderer.setIcon(icon);//setLeafIcon            
        }

        if (leafIcon != null) {
            renderer.setLeafIcon(leafIcon);
        }

        jtrContacts.setCellRenderer(renderer);

        jScrollPane1.setViewportView(jtrContacts);

        DefaultMutableTreeNode group = null;
        DefaultMutableTreeNode contact = null;

        //original Tutorial
        group = new DefaultMutableTreeNode(new Group("我的好友"));
        top.add(group);

        contact = new DefaultMutableTreeNode(new Contact("齐秦"));
        group.add(contact);

        contact = new DefaultMutableTreeNode(new Contact("杨培按"));
        group.add(contact);

        contact = new DefaultMutableTreeNode(new Contact("张娜拉"));
        group.add(contact);

        //Tutorial Continued
        group = new DefaultMutableTreeNode(new Group("同事"));
        top.add(group);

        contact = new DefaultMutableTreeNode(new Contact("雷克"));
        group.add(contact);

        contact = new DefaultMutableTreeNode(new Contact("贝克汉姆"));
        group.add(contact);
        //Swing Tutorial
        group = new DefaultMutableTreeNode(new Group("旅游"));
        top.add(group);

        contact = new DefaultMutableTreeNode(new Contact("样儿车纳姆"));
        group.add(contact);

        contact = new DefaultMutableTreeNode(new Contact("汤姆克鲁斯"));
        group.add(contact);

        contact = new DefaultMutableTreeNode(new Contact("杰克逊"));
        group.add(contact);
    }
